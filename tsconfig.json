{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@/*": [
                "src/*"
            ]
        },
      "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "src/common/database"
    ]
}
